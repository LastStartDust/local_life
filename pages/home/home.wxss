/* pages/home/home.wxss */
swiper{
  height: 420rpx;
}

swiper image{
  height: 420rpx;
}

.categories{
  display: flex;
  flex-wrap: wrap;
  border-left: 1px solid #eee;
  border-top: 1px solid #eee;
  background: #fff;
}

.category{
  width:33.333333%;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-right: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.category image{
  width:70rpx;
  height: 70rpx;
}

.category text{
  font-size: 12px;
  color: #666;
  margin-top: 10rpx;
}

.friends{
  margin-top: 20rpx;
  background-color: #ffffff;
  overflow: hidden;
  padding: 20rpx 30rpx;
}

.friends image{
  width: 330rpx;
  height: 185rpx;
}

.friends .left{
  float: left;
}

.friends .right{
  float: right;
}